<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/_bc08da3fab8d0903a7f56aa00fe9b7a"
        tools:context=".Activities.CreateAlarmActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_above="@+id/botton_nav">
        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Alarm"
                android:layout_centerHorizontal="true"
                android:id="@+id/setalarmview_headertext"
                android:textSize="30sp"
                android:textColor="@color/white"/>
        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/setalarmview_headertext"
                android:text="Save"
                android:id="@+id/save_alarm_button"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_alignParentEnd="true"/>
        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/setalarmview_headertext"
                android:text="Cancel"
                android:id="@+id/setalarm_cancel"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_alignParentStart="true"/>
        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/setalarm_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setalarm_cancel"
                android:text="Alarm name"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:enabled="false"
                android:background="@android:color/transparent"
                android:drawableEnd="@drawable/baseline_mode_24"
                android:drawablePadding="5dp" android:minHeight="48dp"/>
        <TimePicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:timePickerMode="spinner"
                android:id="@+id/setalarm_time"
                android:layout_below="@id/setalarm_name"
                android:numbersSelectorColor="@color/white"/>
        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/setalarm_time"
                android:text="Repeat"
                android:id="@+id/repet_textview"
                android:textColor="#E0F7FA"
                android:textSize="20sp"
                android:textStyle="bold"/>
        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/repet_textview">
            <com.google.android.material.chip.ChipGroup
                    android:layout_width="match_parent"
                    android:id="@+id/chip_group"
                    app:singleSelection="false"
                    android:layout_height="match_parent">
                <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        android:text="Mon"/>
                <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:checkable="true"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        android:text="Tue"/>
                <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:checkable="true"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        android:text="Wed"/>
                <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:checkable="true"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        android:text="Thu"/>
                <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:checkable="true"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        android:text="Fri"/>
                <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:checkable="true"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        android:text="Sat"/>
                <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:checkable="true"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        android:text="Sun"/>
            </com.google.android.material.chip.ChipGroup>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/botton_nav"
            android:visibility="invisible"
            app:menu="@menu/botton_nav_menu"
            android:layout_alignParentBottom="true"/>
</RelativeLayout>